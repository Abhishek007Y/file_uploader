<div style="margin-top: 10rem; display: flex; justify-content: center;">
  <div class="card" style="background-color: #f8f9fa; padding: 2rem; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); width: 40%; text-align: center;">
    <h2 style="color: #333; font-size: 1.8rem; margin-bottom: 1.5rem;">Upload a New File</h2>
    
    <%= form_for @file_upload, html: { multipart: true } do |f| %>
      <div class="form-group" style="margin-bottom: 1.5rem;">
        <%= f.label :title, style: 'font-weight: bold; color: #555;' %>
        <%= f.text_field :title, class: 'input-field', placeholder: 'Enter a title', style: 'width: 100%; padding: 0.8rem; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
      </div>

      <div class="form-group" style="margin-bottom: 1.5rem;">
        <%= f.label :description, style: 'font-weight: bold; color: #555;' %>
        <%= f.text_area :description, class: 'input-field', placeholder: 'Enter a description', style: 'width: 100%; padding: 0.8rem; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
      </div>

      <div class="form-group" style="margin-bottom: 2rem;">
        <%= f.label :file, style: 'font-weight: bold; color: #555;' %>
        <%= f.file_field :file, class: 'input-field', style: 'width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
      </div>

      <div class="form-group" style="margin-top: 2rem;">
        <%= f.submit 'Upload File', class: 'btn-submit', style: 'background-color: #007bff; color: white; border: none; padding: 0.8rem 1.5rem; font-size: 1rem; border-radius: 5px; cursor: pointer; transition: 0.3s;' %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .btn-submit:hover {
    background-color: #0056b3;
  }
</style>
